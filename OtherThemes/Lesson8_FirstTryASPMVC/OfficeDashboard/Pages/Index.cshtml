@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
	<form method="post" class="card p-3">
		<label>Select office</label>
		<select asp-for="CurrentOfficeId" asp-items="Model.OfficesSelectList"></select>
		<input type="submit" value="Confirm"/>
	</form>
	
	@if (Model.SelectedOffice is not null)
	{
		<table class="table mt-5">
			<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Surname</th>
				<th scope="col">Delete</th>
			</tr>
			</thead>
			@foreach (var employee in Model.SelectedOffice.Employees)
			{
				<tr>
					<td>@employee.Name</td>
					<td>@employee.Surname</td>
					<td>
						<form method="post" asp-page-handler="Delete" asp-route-employeeId="@employee.Id" asp-route-officeId="@Model.SelectedOffice.Id">
							<button class="btn btn-danger">Delete</button>
						</form>
					</td>
				</tr>
			}
		</table>
	}
</div>
