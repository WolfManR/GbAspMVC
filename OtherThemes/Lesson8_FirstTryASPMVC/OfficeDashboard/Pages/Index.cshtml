@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
	<form method="post" class="card p-3">
		<label>Select office</label>
		<select asp-for="CurrentOfficeId" asp-items="Model.OfficesSelectList"></select>
		<input type="submit" value="Confirm"/>
	</form>
	
	@if (Model.SelectedOffice is not null)
	{
		<h2 class="mt-5">Employees</h2>

		<form method="post" class="card p-3" asp-page-handler="Create" asp-route-officeId="@Model.SelectedOffice.Id">
			<div class="row">
				<div asp-validation-summary="All"></div>
			</div>
			<div class="form-group mb-0 align-middle">
				<label asp-for="NewEmployee.Name">Name</label>
				<input type="text" asp-for="NewEmployee.Name" class="mr-5">
				<label asp-for="NewEmployee.Surname"></label>
				<input type="text" asp-for="NewEmployee.Surname" class="mr-5" />
				<button class="btn btn-primary">Add</button>
			</div>
		</form>

		<table class="table mt-5">
			<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Surname</th>
				<th scope="col">Delete</th>
			</tr>
			</thead>
			@foreach (var employee in Model.SelectedOffice.Employees)
			{
				<tr>
					<td>@employee.Name</td>
					<td>@employee.Surname</td>
					<td>
						<form method="post">
							<button asp-page-handler="Edit" asp-route-employeeId="@employee.Id" class="btn btn-primary">Edit</button>
							<button asp-page-handler="Delete" asp-route-employeeId="@employee.Id" asp-route-officeId="@Model.SelectedOffice.Id" class="btn btn-danger">Delete</button>
						</form>
					</td>
				</tr>
			}
		</table>
	}
</div>
